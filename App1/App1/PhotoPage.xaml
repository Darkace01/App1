<?xml version="1.0" encoding="utf-8" ?>
<ContentPage BackgroundColor="Black" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App1.PhotoPage">
    <AbsoluteLayout>
        <ActivityIndicator 
            IsRunning="{Binding Source={x:Reference Image}, Path=IsLoading}" Color="White"
                           AbsoluteLayout.LayoutBounds="0.5,0.5,100,100" AbsoluteLayout.LayoutFlags="PositionProportional"></ActivityIndicator>
        <Image x:Name="Image" Aspect="AspectFill"/>
    </AbsoluteLayout>
</ContentPage>